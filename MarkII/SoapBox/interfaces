# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)
 
# The loopback interface
auto lo
iface lo inet loopback

# Wireless interfaces
auto eth0
iface eth0 inet static
	pre-up echo 1 > /sys/class/rfkill/rfkill1/state 
	wireless-mode ad-hoc
	wireless-essid SoapBoxMkII
	wireless-key 'abcde'
        address 192.168.5.202                  
        netmask 255.255.255.0                         
        network 192.168.5.0                                 
        up route add default gw 192.168.5.200 metric 8       
        up echo nameserver 208.67.222.222 > /etc/resolv.conf 
        up echo nameserver 208.67.220.220 >> /etc/resolv.conf
        down route del default gw 192.168.5.200 metric 8     


# Ethernet/RNDIS gadget (g_ether)
# ... or on host side, usbnet and random hwaddr
iface usb0 inet static
	pre-up echo device > /sys/devices/platform/s3c2410-ohci/usb_mode
	pre-up modprobe s3c2410_udc
	pre-up modprobe g_ether
	address 192.168.5.203
	netmask 255.255.255.0
	network 192.168.5.0
	up route add default gw 192.168.5.200 metric 8
	up echo nameserver 208.67.222.222 > /etc/resolv.conf
	up echo nameserver 208.67.220.220 >> /etc/resolv.conf
	up /etc/init.d/sshd restart
	down route del default gw 192.168.5.200 metric 8
	post-down rmmod g_ether
	post-down rmmod s3c2410_udc
	post-down echo host > /sys/devices/platform/s3c2410-ohci/usb_mode

# Bluetooth networking
iface bnep0 inet dhcp

